<!--&lt;!&ndash;                    </android.support.v7.widget.RecyclerView>&ndash;&gt;-->

<!--                </LinearLayout>-->
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>